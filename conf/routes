#Authentication
GET    /login                      controllers.UserSessionsController.login()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                            controllers.Assets.at(path="/public", file)

# Register Drone
GET         /registerDrone                  controllers.RegisterDroneController.index()


