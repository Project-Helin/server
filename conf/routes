# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.Application.index()
POST        /person                            controllers.Application.addPerson()
GET         /persons                           controllers.Application.getPersons

# Message Viewer
GET         /messageviewer                     controllers.MessageViewer.index()
GET         /sendSampleMessage                 controllers.MessageViewer.sendSampleMessage()
GET           /messageviewer/register         controllers.MessageViewer.register()

GET         /zone                              controllers.ZoneCrudController.index()

#Organisation
GET         /organisations                     controllers.Organisations.index()
GET         /organisations/add                 controllers.Organisations.add()
POST        /organisations/create              controllers.Organisations.create()

GET         /organisations/:id/edit            controllers.Organisations.edit(id : java.util.UUID)
POST        /organisations/:id/update          controllers.Organisations.update(id : java.util.UUID)
GET         /organisations/:id/delete          controllers.Organisations.delete(id : java.util.UUID)

#Project
GET         /projects                          controllers.ProjectsController.index()
GET         /projects/create                   controllers.ProjectsController.create()

GET         /projects/:projectId               controllers.ProjectsController.show(projectId : java.util.UUID)
GET         /projects/:projectId/edit          controllers.ProjectsController.edit(projectId : java.util.UUID)
GET         /projects/:projectId/delete        controllers.ProjectsController.delete(projectId : java.util.UUID)
POST        /projects/:projectId/update        controllers.ProjectsController.update(projectId : java.util.UUID)

#Product
GET         /products                     controllers.ProductsController.index()
GET         /products/add                 controllers.ProductsController.add()
POST        /products/create              controllers.ProductsController.create()

GET         /products/:id/edit            controllers.ProductsController.edit(id : java.util.UUID)
POST        /products/:id/update          controllers.ProductsController.update(id : java.util.UUID)
GET         /products/:id/delete          controllers.ProductsController.delete(id : java.util.UUID)

#Authentication
GET         /login                                                   controllers.UsersController.login()
GET         /logout                                                  controllers.UsersController.logout()
POST        /login                                                   controllers.UsersController.loginPost()
GET         /register                                                controllers.UsersController.add()
POST        /register                                                controllers.UsersController.create()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

# Register Drone
GET         /registerDrone                     controllers.RegisterDroneController.index()


#API

POST        /api/drones/                       controllers.api.DronesController.create()

