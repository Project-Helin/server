# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                                        controllers.Application.index()
POST          /person                                                  controllers.Application.addPerson()
GET           /persons                                                 controllers.Application.getPersons

# Message Viewer
GET           /messageviewer                                           controllers.MessageViewer.index()
GET           /sendSampleMessage                                       controllers.MessageViewer.sendSampleMessage()
#GET           /messageviewer/register         controllers.MessageViewer.register()

GET           /zone                                                    controllers.ZoneCrudController.index()

#Organisation
GET           /organisations                                           controllers.organisations.Organisations.index()
GET           /organisations/add                                       controllers.organisations.Organisations.add()
POST          /organisations/create                                    controllers.organisations.Organisations.create()

GET           /organisations/:id/edit                                  controllers.organisations.Organisations.edit(id : java.util.UUID)
POST          /organisations/:id/update                                controllers.organisations.Organisations.update(id : java.util.UUID)
GET           /organisations/:id/delete                                controllers.organisations.Organisations.delete(id : java.util.UUID)

#Project
GET           /organisations/:organisationId/project                   controllers.ProjectsController.index(organisationId : java.util.UUID)
GET           /organisations/:organisationId/project/add               controllers.ProjectsController.add(organisationId : java.util.UUID)
POST          /organisations/:organisationId/project/create            controllers.ProjectsController.create(organisationId : java.util.UUID)

GET           /organisations/:organisationId/project/:id/edit          controllers.ProjectsController.edit(organisationId : java.util.UUID, id : java.util.UUID)
POST          /organisations/:organisationId/project/:id/update        controllers.ProjectsController.update(organisationId : java.util.UUID, id : java.util.UUID)
GET           /organisations/:organisationId/project/:id/delete        controllers.ProjectsController.delete(organisationId : java.util.UUID, id : java.util.UUID)

